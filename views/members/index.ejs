
<% include ../partials/header %>
<% include ../partials/dashboard %>
            
            
									
            <div class="welcome">
            <% include ../partials/flash %>
            </div>
            <div class="m-content">
                <div class="row justify-content-center">
                    
                <div class="col-md-12">
              <!--begin::Portlet-->
                        <div class="m-portlet m-portlet--tab">
                       
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <h3 class="m-portlet__head-text">
                                    All Members
                                    </h3>
                                    
                                </div>

                            </div>
                        </div>
                        <div class="m-portlet__body">
                            <!--begin::Section-->
                            <div class="m-section">
                                <div class="m-section__content table-responsive">
                                
                                <a href="/members/new" class="btn btn-primary float-right">Add a new member</a>
                                    <table class="table table-striped m-table  ">
                                        <thead>
                                            <tr>
                                                <th>Full Name</th>
                                                <th></th>
                                                <th> Date Joined </th>
                                                <th> Address</th>
                                                <th>Action</th>
                                            </tr>


                                        </thead>


                                        <tbody> 
                                        
                                        <% members.forEach(function(member){%>
                                                <tr>  
                                                <td colspan="2" ><span class="bg-info abbre text-white rounded-circle text-center mr-4">
                                                <%=member.firstName.substring(0,1)%> <%=member.lastName.substring(0,1)%>
                                                </span><%= member.firstName + " " + member.lastName%></td>
                                                <td><%= member.dateJoined.toDateString()%> </td>
                                                <td><%= member.address%></td>
                                                <td><div class="dropdown show">
                                                <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class=" icon flaticon-more-v2"></i>
                                                </a>
                                              
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                  <a class="dropdown-item" href="/members/<%=member._id%>">View Profile</a>
                                                 
                                                </div>
                                              </div> </td>
                                            </tr>
                                            <%});%>  

                                        
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!--end::Section-->
                        </div>
                        <!--end::Form-->
                    </div>
                    <!--end::Portlet-->

        </div>
    </div>
</div>
        </div>
    </div>
    <!-- end:: Body -->



